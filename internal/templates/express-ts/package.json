{
    "name": "{{ .ProjectName }}",
    "version": "1.0.0",
    "main": "dist/index.js",
    "scripts": {
        "build": "tsc --build --listEmittedFiles && tsc-alias && echo \"Success: build completed\"",
        "dev": "pnpm install && pnpm start:dev",
        "prisma:generate": "pnpm prisma generate",
        "prisma:migrate": "pnpm prisma migrate deploy",
        "prisma:prepare": "pnpm prisma:generate && pnpm prisma:migrate",
        "start:dev": "nodemon --exec node -r ts-node/register -r tsconfig-paths/register --env-file=.env ./src/index.ts",
        "start:prod": "node ./build/index.js",
        "format": "prettier . --write --config ./.prettierrc && echo \"Success: format completed\"",
        "lint": "prettier --check . --config ./.prettierrc && eslint --max-warnings 0 . && echo \"Success: your code is clean\"",
        "clean": "npm run lint && npm run format",
        "prepare": "node -e \"if (process.env.NODE_ENV !== 'production'){process.exit(1)} \" || husky"
    },
    "dependencies": {
        "express": "^4.18.2",
        "cors": "^2.8.5",
        "helmet": "^7.0.0",
        "morgan": "^1.10.0",
        "zod": "^3.21.4",
        "axios": "^1.7.3",
        "bcryptjs": "^2.4.3",
        "compression": "^1.7.4",
        "cookie-parser": "^1.4.6",
        "@prisma/client": "^6.5.0",
        "express-list-routes": "^1.2.2",
        "jsonwebtoken": "^9.0.2",
        "winston": "^3.13.1",
        "winston-daily-rotate-file": "^5.0.0"
    },
    "devDependencies": {
        "ts-node-dev": "^2.0.0",
        "@types/node": "^20.0.0",
        "@types/express": "^4.17.0",
        "@types/cors": "^2.8.13",
        "@types/morgan": "^1.9.4",
        "@eslint/js": "^9.8.0",
        "@trivago/prettier-plugin-sort-imports": "^4.3.0",
        "@types/bcryptjs": "^2.4.6",
        "@types/compression": "^1.7.5",
        "@types/cookie-parser": "^1.4.7",
        "@types/jsonwebtoken": "^9.0.6",
        "eslint": "9.x",
        "eslint-config-prettier": "^9.1.0",
        "globals": "^15.8.0",
        "husky": "^9.1.4",
        "lint-staged": "^15.2.7",
        "nodemon": "^3.1.4",
        "prettier": "^3.3.3",
        "prisma": "^6.5.0",
        "ts-node": "^10.9.2",
        "tsc-alias": "^1.8.10",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.5.4",
        "typescript-eslint": "^8.0.0"
    },
    "prisma": {
        "seed": "ts-node ./prisma/seed.ts"
    },
    "lint-staged": {
        "**/*": [
            "eslint --max-warnings 0 . --no-warn-ignored",
            "prettier --write --config ./.prettierrc --ignore-unknown"
        ]
    }
}